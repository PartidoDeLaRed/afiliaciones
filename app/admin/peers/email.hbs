<div class="wrapper fullSize">
  <div class="dialogContainer centered" style="width: 768px; margin-top: 100px;">
    <div class="dialogTitle">Enviar Email a {{nombreCompleto}}</div>

    <div class="dialogMessage" style="padding: 10px;">
      <div class="inputWrapper half" style="font-size: 30px">
        Enviar a: {{peer.email}}
      </div>
      <form id="form-email" method="post">
        <div class="form-group">
          <label for="asunto">Asunto</label>
            <input name="asunto" type="text" class="form-control" id="inputAsunto" placeholder="Asunto" required autofocus>
        </div>
        <div class="form-group">
          <label for="mensaje" class="control-label">Mensaje</label>
            <textarea  name="mensaje" type="text" rows="10" class="form-control" id="inputMensaje" placeholder="Mensaje" required></textarea>
        </div>
        <div class="form-group text-center">
            <button id="form-submit" type="submit" class="btn btn-primary btn-lg btn-white">Enviar</button>
        </div>
      </form>
    </div>
    <div class="dialogFooter">
      <div class="dialogButton accept" data-close>Cerrar</div>
    </div>
  </div>
</div>