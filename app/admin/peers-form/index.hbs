    <div class="inputWrapper almostHalf">
      <input type="text" name="domicilioReal_localidad" placeholder="Localidad" value="{{obj.peer.domicilioReal.localidad}}">
    </div>
    <div class="inputWrapper almostHalf">
      <input type="text" name="domicilioReal_provincia" placeholder="Provincia" value="{{obj.peer.domicilioReal.provincia}}">
    </div>
  </div>

{{/if}}

<div class="formGroup header">Imágenes del documento</div>

<div id="sectionImagenesDocumento" class="formGroup content">
  <div class="inputWrapper third">
    <div class="imagePreview" id="picture-1-preview"></div>
    <label class="imageSelector">
      <input id="picture-1" type="file" name="picture-1" class="imagenDocumento" accept="image/*">
      <span class="buttonSelectImage">Frente o primera hoja</span>
    </label>
    <div id="btnCancelPicture1" class="cancelSelection float"></div>
  </div>

  <div class="inputWrapper third">
    <div class="imagePreview" id="picture-2-preview"></div>
    <label class="imageSelector">
      <input id="picture-2" type="file" name="picture-2" class="imagenDocumento" accept="image/*">
      <span class="buttonSelectImage">Dorso o segunda hoja</span>
    </label>
    <div id="btnCancelPicture2" class="cancelSelection float"></div>
  </div>

  <div class="inputWrapper third">
    <div class="imagePreview" id="picture-3-preview"></div>
    <label class="imageSelector">
      <input id="picture-3" type="file" name="picture-3" class="imagenDocumento" accept="image/*">
      <span class="buttonSelectImage">Cambio de domicilio</span>
    </label>
    <div id="btnCancelPicture3" class="cancelSelection float"></div>
  </div>
</div>

<div class="formGroup header">¿Tiene las firmas en las fichas de afiliación?</div>

<div class="formGroup content">
  <div class="inputWrapper fifth">
    <label><input type="radio" name="tieneFirmas" value="Si" {{obj.helpers.tieneFirmasSi}}>Si</label>
  </div>
  <div class="inputWrapper fifth">
    <label><input type="radio" name="tieneFirmas" value="No" {{obj.helpers.tieneFirmasNo}}>No</label>
  </div>
  <div id="btnCanceltieneFirmas" class="cancelSelection" style="display:{{obj.helpers.tieneFirmasCancel}}"></div>
</div>

<div class="formGroup header">¿Está afiliado a otro partido político?</div>

<div class="formGroup header subheader">
  Fijate acá: <a target="_blank" href="http://www.padron.gob.ar/cne_afiliados/">www.padron.gob.ar/cne_afiliados/</a>
</div>

<div class="formGroup content">
  <div class="inputWrapper fifth">
    <label><input type="radio" name="afiliadoOtroPartido" value="Si" {{obj.helpers.afiliadoOtroPartidoSi}}>Si</label>
  </div>
  <div class="inputWrapper fifth">
    <label><input type="radio" name="afiliadoOtroPartido" value="No" {{obj.helpers.afiliadoOtroPartidoNo}}>No</label>
  </div>
  <div id="btnCancelafiliadoOtroPartido" class="cancelSelection" style="display:{{obj.helpers.afiliadoOtroPartidoCancel}}"></div>
</div>

<div class="formGroup header">¿Cómo desea ser contactado?</div>

<div class="formGroup content">
  <div class="inputWrapper third">
    <label><input type="radio" name="formaContacto" value="Email" {{obj.helpers.formaContactoEmail}}/>Email</label>
  </div>
  <div class="inputWrapper third">
    <label><input type="radio" name="formaContacto" value="Telefono" {{obj.helpers.formaContactoTelefono}}/>Teléfono</label>
  </div>
  <div class="inputWrapper third">
    <label><input type="radio" name="formaContacto" value="Domicilio" {{obj.helpers.formaContactoDomicilio}}/>Domicilio</label>
  </div>
</div>

<div class="formGroup header">¿Desea ayudar a afiliar?</div>

<div class="formGroup content">
  <div class="inputWrapper fifth">
    <label><input type="radio" name="deseaAyudar" value="Si" {{obj.helpers.deseaAyudarSi}}>Si</label>
  </div>
  <div class="inputWrapper fifth">
    <label><input type="radio" name="deseaAyudar" value="No" {{obj.helpers.deseaAyudarNo}}/>No</label>
  </div>
  <div id="btnCanceldeseaAyudar" class="cancelSelection" style="display:{{obj.helpers.deseaAyudarCancel}}"></div>
</div>

<div class="errorList"></div>

<div class="formButtons">
  <button id="btnCancelEdit" type="button">Cancelar</button>
  <button id="btnSubmitEdit" type="submit">
    {{#if obj.helpers.isNew}}Agregar{{else}}Editar{{/if}}
  </button>
</div>
