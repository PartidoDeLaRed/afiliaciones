      <input type="text" name="domicilioReal_calle" placeholder="Calle" value="{{obj.peer.domicilio.calle}}">
    </div>
    <div class="inputWrapper fifth">
      <input type="text" name="domicilioReal_numero" placeholder="Numero" value="{{obj.peer.domicilio.numero}}">
    </div>
    <div class="inputWrapper fifth">
      <input type="text" name="domicilioReal_piso" placeholder="Piso" value="{{obj.peer.domicilio.piso}}">
    </div>
    <div class="inputWrapper fifth">
      <input type="text" name="domicilioReal_depto" placeholder="Departamento" value="{{obj.peer.domicilio.depto}}">
    </div>
    <div class="inputWrapper fifth">
      <input type="text" name="domicilioReal_codPostal" placeholder="Codigo Postal" value="{{obj.peer.domicilio.codPostal}}">
    </div>
    <div class="inputWrapper almostHalf">
      <input type="text" name="domicilioReal_localidad" placeholder="Localidad" value="{{obj.peer.domicilio.localidad}}">
    </div>
    <div class="inputWrapper almostHalf">
      <input type="text" name="domicilioReal_provincia" placeholder="Provincia" value="{{obj.peer.domicilio.provincia}}">
    </div>
  </div>

{{else}}

  <div id="sectionDomicilioReal" class="formGroup content">
    <div class="inputWrapper almostHalf">
      <input type="text" name="domicilioReal_calle" placeholder="Calle" value="{{obj.peer.domicilioReal.calle}}">
    </div>
    <div class="inputWrapper fifth">
      <input type="text" name="domicilioReal_numero" placeholder="Numero" value="{{obj.peer.domicilioReal.numero}}">
    </div>
    <div class="inputWrapper fifth">
      <input type="text" name="domicilioReal_piso" placeholder="Piso" value="{{obj.peer.domicilioReal.piso}}">
    </div>
    <div class="inputWrapper fifth">
      <input type="text" name="domicilioReal_depto" placeholder="Departamento" value="{{obj.peer.domicilioReal.depto}}">
