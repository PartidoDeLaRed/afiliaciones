{
  "name": "afiliaciones",
  "version": "0.1.0",
  "description": "App del Partido de la Red para administrar afiliados.",
  "main": "index.js",
  "scripts": {
    "postinstall": "mkdirp ./build",
    "test": "standard",
    "start": "node index.js",
    "dev": "DEBUG=afiliciones* node-dev index.js --no-deps",
    "css:build": "pleeease-compile -t build/css/admin.css admin/layout/index.css & pleeease-compile -t build/css/site.css site/layout/index.css",
    "css:watch": "pleeease-watch -t build/css/admin.css admin/layout/index.css & pleeease-watch -t build/css/site.css site/layout/index.css",
    "js:build": "mkdirp ./build/js && browserify -e admin/layout/index.js -o build/js/admin.js",
    "js:watch": "mkdir -p ./build/js && watchify -e admin/layout/index.js -o build/js/admin.js",
    "watch": "npm run css:watch",
    "build": "npm run css:build & npm run js:build"
  },
  "author": "@PartidoDeLaRed",
  "license": "GPL-3.0",
  "dependencies": {
    "body-parser": "^1.14.2",
    "browserify": "^12.0.1",
    "change-case": "^2.3.1",
    "commander": "^2.9.0",
    "component-type": "^1.2.0",
    "cookie-parser": "^1.4.0",
    "cookie-session": "^1.2.0",
    "debug": "^2.2.0",
    "express": "^4.13.3",
    "express-form": "^0.12.4",
    "express-handlebars": "^2.0.1",
    "handlebars": "^4.0.5",
    "jquery": "^2.1.4",
    "method-override": "^2.3.5",
    "mkdirp": "^0.5.1",
    "moment": "^2.10.6",
    "mongoose": "^4.3.4",
    "mongoose-validators": "^0.1.0",
    "passport": "^0.3.2",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^3.1.0",
    "pleeease-cli": "^4.0.0",
    "watchify": "^3.6.1"
  },
  "devDependencies": {
    "node-dev": "^2.7.1",
    "standard": "^5.4.1"
  }
}
