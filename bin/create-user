var options = require('commander')
var models = require('../lib/models')

var User = models.User

options
  .version('0.0.1')
  .option('-e, --email <value>', 'User email')
  .option('-p, --password <value>', 'User password')
  .parse(process.argv)

models.ready.then(function () {
  User.register(new User({email: options.email}), options.password, function (err, user) {
    if (err) {
      console.error(err)
      return process.exit(1)
    }

    console.log('User created!')
    console.log(user)
    process.exit(0)
  })
})
