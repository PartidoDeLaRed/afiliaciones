<div class="inputWrapper half big"><input type="text" name="nombre" placeholder="Nombre" required autofocus value="{{peer.nombre}}"/></div>
  <div class="inputWrapper half big"><input type="text" name="apellido" placeholder="Apellido" required value="{{peer.apellido}}"/></div>

  <div class="inputWrapper third">
    <select name="matricula_tipo" placeholder="Tipo de Doc.">
      {{{formSelectTipoMatricula}}}
    </select>

    
  </div>
  <div class="inputWrapper third"><input type="text" name="matricula_numero" placeholder="Nro. Doc." value="{{peer.matricula.numero}}"/></div>
  <div class="inputWrapper third"><input type="date" name="fechaNacimiento" placeholder="Fecha de Nacimiento" value="{{peer.fechaNacimiento}}"/></div>

  <div class="inputWrapper almostHalf"><input type="text" name="lugarNacimiento" placeholder="Lugar de Nacimiento"></div>
  <div class="inputWrapper almostThird">
    <select name="sexo" placeholder="Sexo">
      {{{formSelectSexo}}}
      
    </select>
  </div>
  <div class="inputWrapper almostThird">
    <select name="estadoCivil" placeholder="Estado Civil">
      {{{formSelectEstadoCivil}}}
    </select>
  </div>

  <div class="inputWrapper third"><input type="email" name="email" placeholder="Email" required value="{{peer.email}}"/></div>
  <div class="inputWrapper third"><input type="text" name="telefono" placeholder="Telefono" value="{{peer.telefono}}"/></div>
  <div class="inputWrapper third"><input type="text" name="profesion" placeholder="Profesion" value="{{peer.profesion}}"/></div>

  <div class="formGroup header">Domicilio del Documento</div>
  <div class="formGroup content">
    <div class="inputWrapper almostHalf"><input type="text" name="domicilioDoc_calle" placeholder="Calle" value="{{peer.domicilio.calle}}"/></div>
    <div class="inputWrapper fifth"><input type="text" name="domicilioDoc_numero" placeholder="Numero" value="{{peer.domicilio.numero}}"/></div>
    <div class="inputWrapper fifth"><input type="text" name="domicilioDoc_piso" placeholder="Piso" value="{{peer.domicilio.piso}}"/></div>
    <div class="inputWrapper fifth"><input type="text" name="domicilioDoc_depto" placeholder="Departamento" value="{{peer.domicilio.depto}}"/></div>

    <div class="inputWrapper fifth"><input type="text" name="domicilioDoc_codPostal" placeholder="Codigo Postal" value="{{peer.domicilio.codPostal}}"/></div>
    <div class="inputWrapper almostHalf"><input type="text" name="domicilioDoc_localidad" placeholder="Localidad" value="{{peer.domicilio.localidad}}"/></div>
    <div class="inputWrapper almostHalf"><input type="text" name="domicilioDoc_provincia" placeholder="Provincia" value="{{peer.domicilio.provincia}}"/></div>
  </div>
  <div class="formGroup header">Domicilio efectivo de la persona</div>
  <div class="formGroup content">
    <div class="inputWrapper almostHalf"><input type="text" name="domicilioDoc_calle" placeholder="Calle" value="{{peer.domicilioReal.calle}}" /></div>
    <div class="inputWrapper fifth"><input type="text" name="domicilioReal_numero" placeholder="Numero" value="{{peer.domicilioReal.numero}}" /></div>
    <div class="inputWrapper fifth"><input type="text" name="domicilioReal_piso" placeholder="Piso" value="{{peer.domicilioReal.piso}}" /></div>
    <div class="inputWrapper fifth"><input type="text" name="domicilioReal_depto" placeholder="Departamento" value="{{peer.domicilioReal.depto}}" /></div>

    <div class="inputWrapper fifth"><input type="text" name="domicilioReal_codPostal" placeholder="Codigo Postal" value="{{peer.domicilioReal.codPostal}}" /></div>
    <div class="inputWrapper almostHalf"><input type="text" name="domicilioReal_localidad" placeholder="Localidad" value="{{peer.domicilioReal.localidad}}" /></div>
    <div class="inputWrapper almostHalf"><input type="text" name="domicilioReal_provincia" placeholder="Provincia" value="{{peer.domicilioReal.provincia}}" /></div>
  </div>

{{#if peer.isNew}}
  <button type="submit">Editar</button>
{{else}}
<button type="submit">Agregar</button>
{{/if}}