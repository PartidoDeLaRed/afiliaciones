<div class="admin">
  <div class="heading">
    <h2>Afiliaciones ({{peers.length}})</h2>
    <a class="addButton" href="/admin/peers/new"></a>
  </div>
  <div class="peersListHeaders">
    <div class="listHeader state">
      Estado
    </div><div class="listHeader name" data-field="Nombre">
      Nombre Competo
    </div><div class="listHeader doc" data-field="Matricula">
      Matricula
    </div><div class="listHeader email" data-field="Email">
      Email
    </div><div class="listHeader actions">
      Acciones
    </div></div>
  <div class="peersList">
    {{#if peers}}
      {{#each peers}}
      <div class="peerContainer" data-id="{{id}}">
        <div class="peerEstado ok">
        </div><div class="peerNombre">
          {{nombre}} {{apellido}}
        </div><div class="peerMatricula">
          {{matricula.numero}}
        </div><div class="peerEmail">
          {{email}}
        </div><div class="actionsContainer">
          <a class="button delete" href="#">
          </a><a class="button edit" href="/admin/peers/{{id}}/edit">
          </a><a class="button info" href="#"></a>
        </div>
      </div>
      {{/each}}
    {{else}}
      <div class="noItems">No hay afiliados</div>
    {{/if}}
  </div>
</div>