<div class="admin">
  <div class="heading">
    <h2 id="afiliacionesTitle">Afiliaciones {{#if peers}}({{peers.length}}){{/if}}</h2>
    <a class="addButton" href="/admin/peers/new"></a>
    <select id="listType" class="mainSelect">
      <option value="todos">Todos los afiliados</option>
      <option value="todoOk">Afiliados con todo OK</option>
      <optgroup label="Afiliados Con Errores"> 
        <option value="faltanDatos">Que les faltan datos</option>
        <option value="faltanFirmas">Que les faltan firmas en las fichas</option>
        <option value="afiliadoOtroPartido">Que están afiliados a otro partido</option>
      </optgroup>
    </select>
  </div>
  <div class="peersListHeaders">
    <div class="listHeader state datos">
      Datos
    </div><div class="listHeader state firmas">
      Firmas
    </div><div class="listHeader state noAfiliado">
      No Afil.
    </div><div class="listHeader name" data-field="Apellido">
      Apellido
    </div><div class="listHeader name" data-field="Nombre">
      Nombre
    </div><div class="listHeader doc" data-field="Matricula">
      Matricula
    </div><div class="listHeader email" data-field="Email">
      Email
    </div><div class="listHeader actions">
      Acciones
    </div></div>
  <div class="peersList">
    {{#if peers}}
      {{#each peers}}
      <div class="peerContainer visible" data-id="{{id}}">
        <div class="peerEstado datosCompletos {{#if datosCompletos}}ok{{else}}no{{/if}}">
        </div><div class="peerEstado tieneFirmas {{#if tieneFirmas}}ok{{else}}no{{/if}}">
        </div><div class="peerEstado noAfiliado {{#if noAfiliadoOtroPartido}}ok{{else}}no{{/if}}">
        </div><div class="peerApellido">
          {{apellido}}
        </div><div class="peerNombre">
          {{nombre}}
        </div><div class="peerMatricula">
          {{matricula.numero}}
        </div><div class="peerEmail">
          {{email}}
        </div><div class="actionsContainer">
          <a class="button delete" href="#">
          </a><a class="button edit" href="/admin/peers/{{id}}/edit">
          </a><a class="button info" href="#"></a>
        </div>
      </div>
      {{/each}}
    {{else}}
      <div class="noItems">No hay afiliados</div>
    {{/if}}
  </div>
</div>